<Window x:Class="ImageSys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageSys"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ScrollViewer Name="scrollViewer" ScrollChanged="scrollViewer_ScrollChanged">
            <ListBox Name="listBox" SelectionChanged="listBox_SelectionChanged"/>
        </ScrollViewer>
    </Grid>
</Window>
